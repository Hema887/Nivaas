pipeline {
    agent any

    triggers {
        githubPullRequest()
    }

    stages {
        stage('Test') {
            steps {
                // Run your unit tests
                sh 'mvn clean install'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                // Deploy backend app after merging PR to main
                sh 'scp target/backend.jar jenkins@20.2.249.184:opt/Sample/juvarya'
                sh 'ssh jenkins@20.2.249.184 "systemctl restart backend-service"'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
