pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Pull the latest code from GitHub
                git branch: 'main', url: 'https://github.com/Hema887/Nivaas'
            }
        }

        stage('Deploy to VM') {
            steps {
                // SSH into your VM and deploy the code
                sshagent(['4c672dff-3d27-4891-85cd-4be84f880317']) {
                    sh '''
                    ssh juvarya@20.2.249.184 << 'EOF'
                    cd ./juvarya
                    git pull origin main
                    ./deploy.sh  # This script handles your app deployment (e.g., restarting the service)
                    EOF
                    '''
                }
            }
        }
    }
}
