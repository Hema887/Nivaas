pipeline {
    agent any
    tools {
        maven 'myMaven'
    }
    stages {
        stage('List Directory') {
            steps {
                dir('juvarya') {  
                    sh 'ls -l'  
                }
            }
        }
        stage('Build') {
            steps {
                dir('juvarya') {  
                    configFileProvider([configFile(fileId: '4d7332cf-5a01-4a19-b898-2c239983c080', variable: 'MAVEN_SETTINGS')]) {
                        sh 'mvn clean install --settings $MAVEN_SETTINGS'
                    }
                }
            }
        }
    }
}